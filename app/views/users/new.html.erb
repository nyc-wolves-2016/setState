<h1>Users#new</h1>
<p>Enter Registration Information Below: </p>

    <%= form_for(:users, url: '/register') do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %><br><br>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br><br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br><br>

      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
    <hr>

    <p>New user? <%= link_to "Sign up now!", login_path %></p>
